<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/gambarProfilKlien"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/logo"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/namaPengguna"
                android:layout_toRightOf="@+id/gambarProfilKlien"
                android:layout_alignParentTop="true"
                android:textSize="25sp"
                android:text="Sigit"


        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/namaSekloahAsal"
                android:layout_toRightOf="@+id/gambarProfilKlien"
                android:layout_below="@+id/namaPengguna"
                android:text="SMKN 2 BOJONEGRO"


        />

        <LinearLayout
                android:id="@+id/layout_batas_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/gambarProfilKlien"
                android:layout_below="@+id/namaSekloahAsal">



            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaJurusan"
                    android:text="TKJ"


            />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>