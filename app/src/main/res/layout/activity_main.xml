<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sinon.bursakerjakhusussmkadmin.MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APLIKASI ADMIN BKK"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:id="@+id/linearLayoutUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarMain"
            android:orientation="vertical"
            android:layout_marginTop="64dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputTextNamaAdmin"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Pengguna Admin">

                <requestFocus/>

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputTextSandi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sandi"
                    android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/tombolMasuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="masuk"
                android:textColor="@android:color/white"
                android:theme="@style/TombolKu"/>



    </LinearLayout>


</RelativeLayout>
