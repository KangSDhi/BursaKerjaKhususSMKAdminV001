<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="4dp">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

            <EditText
                    android:id="@+id/edtIdPerusahaan"
                    android:inputType="text"
                    android:hint="Id Perusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
            />

            <EditText
                    android:id="@+id/edtNamaPerusahaan"
                    android:inputType="text"
                    android:hint="Nama Perusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
            />

            <EditText
                    android:id="@+id/edtNamaLowongan"
                    android:inputType="text"
                    android:hint="Nama Lowongan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
            />

            <EditText
                    android:id="@+id/edtWaktuBerlaku"
                    android:inputType="text"
                    android:hint="Berlaku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
            />

            <EditText
                    android:id="@+id/edtPersyratan"
                    android:inputType="textMultiLine"
                    android:hint="Persyratan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <Button
                        android:id="@+id/btnSelect"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="pilih"
                        android:textColor="@android:color/white"
                />

                <Button
                        android:id="@+id/btnUpload"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="unggah"
                        android:textColor="@android:color/white"
                />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</android.support.v7.widget.CardView>