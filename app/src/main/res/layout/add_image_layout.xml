<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerusahaanDialog"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:src="@drawable/dell_logo"/>

        <TextView
                android:id="@+id/txtPratinjauFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPerusahaanDialog"
                android:text="Pratinjau Foto"
                android:textSize="16dp"
                android:gravity="center"/>

        <Button
                android:id="@+id/btnPilih"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtPratinjauFoto"
                android:text="cari"
                android:drawableLeft="@drawable/ic_search"
        />

    </RelativeLayout>



</android.support.v7.widget.CardView>